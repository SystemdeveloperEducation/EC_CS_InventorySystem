@inherits LayoutComponentBase
@using static InvSystem.Data.Cart;

<PageTitle>InvSystem</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-basket cartIcon" target="_blank">@Cart.GetProducts().Count</span>
                <div class="cartHolder">
                @foreach (var shoppingCartItem in Cart.GetProducts())
                {
                    <div>@shoppingCartItem.Title</div>
                }
                @* <CartComponent ></CartComponent> *@
                </div>

            </NavLink>
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

